<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_con"
        android:background="#FFF9F9F9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relNam"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/namIm"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/namIm"
                android:layout_toEndOf="@id/namIm"
                tools:text="Charles Best"
                android:textSize="17sp"
                android:id="@+id/nameText"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/namIm"
                android:layout_toEndOf="@id/namIm"
                android:visibility="gone">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:hint="Name"
                    android:inputType="text"
                    />

            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/namIm"
                android:layout_toRightOf="@id/namIm"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relEma"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relNam">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/emailIm"
                android:src="@drawable/ic_email_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/emailIm"
                android:layout_toEndOf="@id/emailIm"
                android:id="@+id/emailText"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="17sp"
                tools:text="Charlesbest@gmail.com"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emailWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/emailIm"
                android:layout_toRightOf="@id/emailIm"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relEma"
            android:id="@+id/relphone">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/phoneIm"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/phoneIm"
                android:layout_toEndOf="@id/phoneIm"
                android:id="@+id/phoneText"
                android:textSize="17sp"
                tools:text="07061011343"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phoneWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/phoneIm"
                android:layout_toEndOf="@id/phoneIm">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:visibility="gone"/>
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/phoneIm"
                android:layout_toRightOf="@id/phoneIm"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/relphone"
            android:id="@+id/relAdd">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/addIm"
                android:src="@drawable/ic_location_city_black_24dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/addIm"
                android:layout_toEndOf="@id/addIm"
                android:id="@+id/addText"
                android:textSize="17sp"
                tools:text="Comyuter Science"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="14dp"
                android:paddingTop="@dimen/activity_vertical_margin"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addressWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/addIm"
                android:layout_toEndOf="@id/addIm">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="text"
                    android:visibility="gone"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC6C6C6"
                android:layout_below="@id/addIm"
                android:layout_toRightOf="@id/addIm"/>

        </RelativeLayout>


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
